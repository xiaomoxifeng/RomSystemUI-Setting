<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
	android:id="@+id/tw_category" 
	android:background="@color/flow_color"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:paddingStart="@dimen/dashboard_category_padding_start" 
	android:paddingEnd="@dimen/dashboard_category_padding_end" 
	android:elevation="@dimen/dashboard_category_elevation"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView 
    	android:textAppearance="@style/TextAppearance.TwCategoryTitle" 
    	android:ellipsize="marquee" 
    	android:gravity="center_vertical" 
    	android:id="@+id/tw_category_title" 
    	android:background="@color/tw_dashboard_category_title_background" 
    	android:layout_width="fill_parent" 
    	android:layout_height="@dimen/tw_dashboard_category_title_height" 
    	android:singleLine="true" 
    	android:textAlignment="viewStart" 
    	android:paddingStart="@dimen/dashboard_category_title_margin_start" />
    <com.android.settings.view.TwCategoryContainerView 
    	android:id="@+id/tw_category_content" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" />
</LinearLayout>